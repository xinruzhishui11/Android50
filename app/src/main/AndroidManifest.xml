<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.itheima.android50" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/DefaultTheme" >
        <activity
            android:name="com.itheima.android50.MainActivity"
            android:windowSoftInputMode="adjustUnspecified|stateHidden"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.itheima.android50.taransitions.TransitionsActivity"
            android:configChanges="orientation|keyboardHidden" >
        </activity>

        <activity
            android:name="com.itheima.android50.taransitions.ExplodeActivity"
            android:configChanges="orientation|keyboardHidden" >
        </activity>

        <activity
            android:name="com.itheima.android50.taransitions.FadeActivity"
            android:configChanges="orientation|keyboardHidden" >
        </activity>

        <activity
            android:name="com.itheima.android50.taransitions.SlideActivity"
            android:configChanges="orientation|keyboardHidden" >
        </activity>
        <activity
            android:name="com.itheima.android50.taransitions.ShareActivity"
            android:configChanges="orientation|keyboardHidden" >
        </activity>

        <activity
            android:theme="@style/WidgetTheme"
            android:name="com.itheima.android50.widget.WidgetActivity"
            android:configChanges="orientation|keyboardHidden" >
        </activity>
    </application>

</manifest>
